<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    app:contentPadding="2dp"
    android:layout_marginEnd="6dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="6dp">
    <RelativeLayout
        android:id="@+id/Drop_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageDrop"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/picture_pdf"/>
        <TextView
            android:id="@+id/nameDrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/delete_Drop"
            android:textStyle="bold"
            android:layout_toEndOf="@id/imageDrop"
            android:layout_marginTop="8dp"
            android:text="Pdf Name"/>
        <TextView
            android:id="@+id/DocDrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageDrop"

            android:layout_toStartOf="@id/delete_Drop"
            android:layout_below="@id/nameDrop"
            android:text="Doctor"
            />
        <TextView
            android:id="@+id/hosDrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageDrop"
            android:layout_toStartOf="@id/delete_Drop"
            android:layout_below="@id/DocDrop"
            android:text="Clinic"
            />
        <ImageButton
            android:id="@+id/delete_Drop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_delete_icon"
            android:background="@color/zxing_transparent"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>